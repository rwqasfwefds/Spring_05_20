        SELECT *
        FROM(
        SELECT ROWNUM R, TBB.*
        FROM TB_BOARD TBB
        WHERE ROWNUM &lt;= #{currentPageNo} * #{recordsPerPage}
        AND DELETE_YN = 'N'
        ORDER BY NOTICE_YN ASC,
                 IDX DESC,
                 INSERT_TIME DESC
        )
        WHERE R &gt; (#{currentPageNo} - 1) * #{recordsPerPage}
        <include refid="Common.search"></include>
    </select>
</mapper>